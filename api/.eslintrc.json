{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "ignorePatterns": ["node_modules"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "tabWidth": 2,
        "printWidth": 80
      }
    ],
    "no-console": "off",
    "func-names": "off",
    "consistent-return": "off",
    "global-require": "off",
    "no-underscore-dangle": "off"
  }
}
